{
	"compilerOptions": {
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"target": "es5",
		"noImplicitAny": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": false,
		"noUnusedLocals": false,
        "module": "es2015",
        "lib": [
            "scripthost",
            "es5",
            "es2015",
            "dom"
        ]
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts?"
	],
    "typeRoots": [
      "node_modules/@types"
    ]
}